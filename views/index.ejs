<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Sistema GYM - DEMO</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .logo {
      width: 120px;
      display: block;
      margin: 20px auto 10px;
    }
    .botones-superiores {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 10px;
      flex-wrap: wrap;
    }
    .estado-vencido {
      color: red !important;
      font-weight: bold !important;
    }
    .estado-aldia {
      color: green !important;
      font-weight: bold !important;
    }
    .boton-wsp {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #25d366;
      color: white;
      padding: 12px 20px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    #cumple-popup {
      position: fixed;
      top: 20px;
      right: 20px;
      max-width: 300px;
      z-index: 9999;
    }
    #busqueda {
      width: 50%;
    }
    @media (max-width: 576px) {
      .table {
        font-size: 14px;
      }
      #busqueda {
        width: 100% !important;
      }
    }
  </style>
</head>
<body>
  <div class="container text-center">
    <img src="/images/logo.png" alt="Logo" class="logo">
    <h1 class="mb-2">Sistema GYM - DEMO</h1>

    <div class="botones-superiores">
      <a href="/reportes" class="btn btn-outline-primary">Ver Reportes</a>
      <a href="/nuevo" class="btn btn-success">+ Nuevo Alumno</a>
      <a href="/logout" class="btn btn-outline-danger">Cerrar SesiÃ³n</a>
    </div>

    <!-- BÃºsqueda en tiempo real -->
    <div class="d-flex justify-content-center mt-2 mb-3">
      <input type="text" id="busqueda" placeholder="Buscar alumno..." class="form-control me-2" onkeyup="filtrar()">
    </div>

    <!-- CumpleaÃ±os flotante -->
    <% if (cumpleanieros.length > 0) { %>
      <div id="cumple-popup" class="alert alert-info alert-dismissible fade show">
        <button type="button" class="btn-close" onclick="document.getElementById('cumple-popup').style.display='none';"></button>
        ðŸŽ‰ Hoy es el cumpleaÃ±os de:
        <ul class="mb-0">
          <% cumpleanieros.forEach(c => { %>
            <li><strong><%= c.nombre %> <%= c.apellido %></strong></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <p class="mt-3"><strong>Total ingresado hoy:</strong> $<%= totalIngresos %></p>

    <div class="table-responsive mt-3">
      <table class="table table-striped table-hover" id="tabla-clientes">
        <thead class="table-light">
          <tr>
            <th>Nombre</th>
            <th>Plan</th>
            <th>Celular</th>
            <th>Estado</th>
            <th>Ver Alumno</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          <% clientes.forEach(cliente => { %>
            <tr>
              <td><%= cliente.nombre %> <%= cliente.apellido %></td>
              <td><%= cliente.plan %></td>
              <td><%= cliente.celular %></td>
              <td class="<%= cliente.estado === 'Vencido' ? 'estado-vencido' : 'estado-aldia' %>">
                <%= cliente.estado %>
              </td>
              <td>
                <a href="/cliente/<%= cliente._id %>" class="btn btn-sm btn-primary">Ver Alumno</a>
              </td>
              <td>
                <form method="POST" action="/cliente/<%= cliente._id %>/eliminar" onsubmit="return confirm('Â¿EstÃ¡s seguro de eliminar este alumno?');">
                  <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <a href="https://wa.me/3813652112?text=Hola, quiero contratar el sistema JP Entrenamiento DEMO" target="_blank" class="boton-wsp">
    Contratar Sistema
  </a>

  <script>
    function filtrar() {
      const input = document.getElementById("busqueda").value.toLowerCase();
      const filas = document.querySelectorAll("#tabla-clientes tbody tr");

      filas.forEach(fila => {
        const texto = fila.innerText.toLowerCase();
        fila.style.display = texto.includes(input) ? "" : "none";
      });
    }
  </script>
</body>
</html>
