<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Sistema GYM - DEMO</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .logo {
      width: 120px;
      display: block;
      margin: 20px auto 10px;
    }
    .estado-vencido {
      color: red !important;
      font-weight: bold !important;
    }
    .estado-aldia {
      color: green !important;
      font-weight: bold !important;
    }
    .boton-wsp {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #25d366;
      color: white;
      padding: 12px 20px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      z-index: 999;
    }
    #cumple-popup {
      position: fixed;
      top: 20px;
      right: 20px;
      max-width: 300px;
      z-index: 9999;
    }
    #busqueda {
      width: 100%;
    }
    .top-bar {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
      margin: 20px 0;
    }
    .top-bar .izquierda {
      display: flex;
      gap: 10px;
    }
    .top-bar .derecha {
      display: flex;
      gap: 10px;
      margin-left: auto;
    }
    @media (max-width: 768px) {
      .top-bar {
        flex-direction: column;
        align-items: stretch;
      }
      .top-bar .derecha, .top-bar .izquierda {
        justify-content: center;
        margin: 0 auto;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <img src="/images/logo.png" alt="Logo" class="logo">
    <h1 class="text-center mb-4">Sistema GYM - DEMO</h1>

    <div class="top-bar">
      <div class="izquierda">
        <a href="/nuevo" class="btn btn-success">+ Nuevo Alumno</a>
      </div>
      <div class="derecha">
        <input type="text" id="busqueda" placeholder="Buscar por nombre o apellido..." class="form-control" onkeyup="filtrar()">
        <a href="/reportes" class="btn btn-outline-primary">Ver Reportes</a>
        <a href="/logout" class="btn btn-outline-danger">Cerrar SesiÃ³n</a>
      </div>
    </div>

    <% if (cumpleanieros && cumpleanieros.length > 0) { %>
      <div id="cumple-popup" class="alert alert-info alert-dismissible fade show">
        <button type="button" class="btn-close" onclick="document.getElementById('cumple-popup').style.display='none';"></button>
        ðŸŽ‰ Hoy es el cumpleaÃ±os de:
        <ul class="mb-0">
          <% cumpleanieros.forEach(c => { %>
            <li><strong><%= c.nombre %> <%= c.apellido %></strong></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <div class="row text-center mb-4">
      <div class="col-md-3">
        <div class="p-3 border bg-white rounded shadow-sm">
          <h5>Total Clientes</h5>
          <h3><%= clientes.length %></h3>
        </div>
      </div>
      <div class="col-md-3">
        <div class="p-3 border bg-white rounded shadow-sm">
          <h5 class="text-success">Al DÃ­a</h5>
          <h3 class="text-success"><%= clientes.filter(c => c.estado === 'Al DÃ­a').length %></h3>
        </div>
      </div>
      <div class="col-md-3">
        <div class="p-3 border bg-white rounded shadow-sm">
          <h5 class="text-danger">Vencidos</h5>
          <h3 class="text-danger"><%= clientes.filter(c => c.estado === 'Vencido').length %></h3>
        </div>
      </div>
      <div class="col-md-3">
        <div class="p-3 border bg-white rounded shadow-sm">
          <h5>Total Ingresos</h5>
          <h3 class="text-info">$<%= totalIngresos.toFixed(2) %></h3>
        </div>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover" id="tabla-clientes">
        <thead class="table-dark">
          <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Celular</th>
            <th>Plan</th>
            <th>Inicio</th>
            <th>Pago</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% clientes.forEach(cliente => { %>
            <tr class="<%= cliente.estado === 'Vencido' ? 'table-danger' : '' %>">
              <td><%= cliente.nombre %> <%= cliente.apellido %></td>
              <td><%= cliente.edad %></td>
              <td><%= cliente.celular || '-' %></td>
              <td><%= cliente.plan %></td>
              <td><%= new Date(cliente.fechaInicio).toLocaleDateString() %></td>
              <td><%= cliente.fechaPago ? new Date(cliente.fechaPago).toLocaleDateString() : '-' %></td>
              <td class="<%= cliente.estado === 'Vencido' ? 'estado-vencido' : 'estado-aldia' %>"><%= cliente.estado %></td>
              <td>
                <a href="/cliente/<%= cliente._id %>" class="btn btn-sm btn-primary">Ver Alumno</a>
                <form method="POST" action="/cliente/<%= cliente._id %>/eliminar" class="d-inline" onsubmit="return confirm('Â¿EstÃ¡s seguro de eliminar este alumno?');">
                  <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <a href="https://wa.me/3813652112?text=Hola, quiero contratar el sistema JP Entrenamiento DEMO" target="_blank" class="boton-wsp">
    Contratar Sistema
  </a>

  <footer class="text-center text-white mt-5" style="background-color: #000;">
    <div class="container p-4">
      <section class="mb-4">
        <a class="btn btn-outline-light btn-floating m-1" href="https://wa.me/3813652112" target="_blank" role="button">
          <i class="fab fa-whatsapp"></i> WhatsApp
        </a>
        <a class="btn btn-outline-light btn-floating m-1" href="https://instagram.com/ml.desarrollosweb" target="_blank" role="button">
          <i class="fab fa-instagram"></i> Instagram
        </a>
      </section>
      <section class="mb-0">
        <p class="mb-0">Â© 2025 Todos los derechos reservados | Desarrollado por
          <a href="https://instagram.com/ml.desarrollosweb" target="_blank" class="text-white fw-bold text-decoration-underline">ML Desarrollos Web</a>
        </p>
      </section>
    </div>
  </footer>

  <script>
    function filtrar() {
      const input = document.getElementById("busqueda").value.toLowerCase();
      const filas = document.querySelectorAll("#tabla-clientes tbody tr");

      filas.forEach(fila => {
        const texto = fila.innerText.toLowerCase();
        fila.style.display = texto.includes(input) ? "" : "none";
      });
    }
  </script>
</body>
</html>
