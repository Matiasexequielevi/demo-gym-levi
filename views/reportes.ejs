<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Reportes - Sistema GYM DEMO</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .logo {
      width: 120px;
      display: block;
      margin: 20px auto 10px;
    }
    .boton-volver {
      position: absolute;
      top: 20px;
      left: 20px;
    }
    .resumen {
      margin-top: 30px;
    }
    footer {
      text-align: center;
      margin-top: 40px;
      color: #999;
    }
  </style>
</head>
<body>
  <div class="container position-relative">
    <a href="/" class="btn btn-outline-secondary boton-volver">‚Üê Volver</a>

    <img src="/images/logo.png" alt="Logo" class="logo">
    <h2 class="text-center mb-4">Reportes de Pagos</h2>

    <form class="row g-3 justify-content-center mb-4" method="GET" action="/reportes">
      <div class="col-md-4">
        <label>Desde</label>
        <input type="date" name="desde" class="form-control" value="<%= desde %>">
      </div>
      <div class="col-md-4">
        <label>Hasta</label>
        <input type="date" name="hasta" class="form-control" value="<%= hasta %>">
      </div>
      <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
      </div>
    </form>

    <div class="resumen text-center">
      <h5>Pagos encontrados: <%= pagosFiltrados.length %></h5>
      <h5>Total recaudado: <span class="text-success">$<%= total %></span></h5>
    </div>

    <div class="table-responsive mt-4">
      <table class="table table-striped table-hover">
        <thead class="table-light">
          <tr>
            <th>Alumno</th>
            <th>Fecha</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody>
          <% pagosFiltrados.forEach(p => { %>
            <tr>
              <td><%= p.nombre %> <%= p.apellido %></td>
              <td><%= new Date(p.fecha).toLocaleDateString() %></td>
              <td>$<%= p.monto %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <footer>Todos los derechos reservados - Levi Prog.</footer>
  </div>
</body>
</html>
